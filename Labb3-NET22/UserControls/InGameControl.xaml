<UserControl x:Class="Labb3_NET22.UserControls.InGameControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300" Height="410" Width="640">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="35" />
            <RowDefinition Height="35" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="35" />
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Grid.RowSpan="2147483647" Grid.Column="1" MaxWidth="320" MaxHeight="320"
               Source="{Binding CurrentQuestion.Image}"
               Stretch="Uniform" />
        <Label Grid.Column="0" Grid.Row="0" Content="Question" />
        <TextBlock Grid.Column="0" Grid.Row="1" Text="{Binding CurrentQuestion.Statement}" />
        <ListView Grid.Column="0" Grid.Row="2" Name="AnswersListBox"
                  ItemsSource="{Binding CurrentQuestion.Answers}"
                  MinHeight="20"
                  SelectionMode="Single" SelectionChanged="AnswersListBox_OnSelectionChanged" />
        <StackPanel Grid.Column="0" Grid.Row="3" Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Label Content="{Binding CorrectAnswers}" />
            <Label Content="/" />
            <Label Content="{Binding CurrentQuiz.RedundantList.Count}" />
            <Button Width="60" Content="Previous" Name="PreviousButton" Click="PreviousButton_OnClick" />
            <Button Width="60" Name="NextButton" Click="NextButton_OnClick"
                    Content="{Binding ButtonText}" />
        </StackPanel>
    </Grid>
</UserControl>